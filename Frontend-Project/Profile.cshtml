                        var y = document.getElementById("modificationAddresse");
                        y.innerHTML = table.rows[row].cells[1].innerHTML;
                    }
                };
                myNumero();
               
            } else {
                document.getElementById("hideAddresse").style.display = 'none';
            }
        }

        function toggleNumero(element) {
          //  alert("row" + element.parentNode.parentNode.rowIndex +
          //      " - column" + element.parentNode.cellIndex);
            if (document.getElementById("hideNumero").style.display == 'none') {
