    <script>
        function toggleEmail(element) {       
            if (document.getElementById("hideEmail").style.display == 'none') {
                
                document.getElementById("hideEmail").style.display = 'table-row'; // set to table-row instead of an empty string
                var table = document.getElementById("tableEmail");
                var row = element.parentNode.parentNode.rowIndex;
                var c = confirm("Est-ce que tu veux modifier ce parametre?");
                if (c === true) {
                    var myEmail = function () {

                        console.log(table.rows[row].cells[1]);
                        var y = document.getElementById("modificationEmail")
                        y.innerHTML = table.rows[row].cells[1].innerHTML;
                    }
                };
                myEmail();
                } else {
                document.getElementById("hideEmail").style.display = 'none';
                }
        }

        function toggleAddresse(element) {
